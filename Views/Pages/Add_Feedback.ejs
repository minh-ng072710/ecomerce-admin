<style>
  .form-control {
    height: 50px;
  }
</style>
<div class="kt-pagebody">

  <!-- row -->

  <div class="row row-sm mg-t-20">
    <div class="col-xl-12">
      <div class="card bd-blue-300" style="background-color:#BFE0E7;">
        <div class="card-header bg-gray-100 pd-y-15 pd-x-20" style="background-color:#BFE0E7;">
          <center>
            <h3 class="register-heading" style="color:
              #606445;font-family: 'PT Serif', serif;font-weight: 900;margin-left:-40px ;">THÊM FEEDBACK SẢN PHẨM</h3>
          </center>
        </div><!-- card-header -->
        <div class="col-md-10 register-right">

          <div class="tab-content" id="myTabContent" style="margin-right: -5px;">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
              <form action="./addfeedback" method="POST">
                <div class="row register-form" style="margin-left: 180px;
                          margin-top: 36px;">

                  <div class="col-md-12">

                    <div class="form-group">




                      <select id="right" class="form-control" name="nameproduct">

                       
                        <% listfeedback.forEach(function(item){ %>

                        <option value="<%= item.proID %>"><%= item.name%></option>
                        <% }) %>
                      </select>
                    </div>
                    <div class="form-group">



                      <textarea class="form-control" rows="5" cols="50" placeholder="Nhập Đánh Giá Sản Phẩm...."
                        name="content"></textarea>


                    </div>
                    <div class="form-group">
                      <input type="number" name="rating" min="1" max="6" class="form-control">
                    </div>


                    <div class="form-group">
                      <input type="text" class="form-control" placeholder="Vui Lòng Để Lại Email...." name="email" />
                    </div>


                  </div>

                </div>
                <center>
                    <div class="form-group">
                      <button type="submit" class="btn btn-primary" 
                        style="font-family: 'PT Serif', serif;font-weight: 900;font-size: 20px;MARGIN-LEFT: 144PX;">Thêm</button>
      
      
                    </div>
      
                  </center>
              </form>
              
              
            </div>



           
          

        
          </div>
          <center>
            <a href="./listfeedback">
              <button type="button" class="btn btn-warning"
                style="margin-bottom:50px;width: 180px;display:block;font-family: 'PT Serif', serif;font-weight: 900;font-size: 20px; MARGIN-LEFT: 144PX;">Xem
                Danh Sách</button>
            </a>
          </center>


        </div>

      </div>
    </div>
    <!-- table-responsive -->
    <!-- card-footer -->
  </div><!-- card -->




</div><!-- col-8 -->
<!-- col-4 -->
</div><!-- row -->
</div>